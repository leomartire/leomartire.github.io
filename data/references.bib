doi = {10.1093/gji/ggy530},
file = {:home/l.martire/Documents/refs/refs{\_}Mendeley/Green, Nippress - Geophysical Journal International - 2019 - Infrasound signal duration The effects of propagation distance and waveguid.pdf:pdf},
