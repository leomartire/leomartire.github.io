file = {:home/l.martire/Documents/refs/refs{\_}Mendeley/Albert, Linville - Seismological Research Letters - 2020 - Benchmarking Current and Emerging Approaches to Infrasound Signal Classificat.pdf:pdf},
issn = {0895-0695},
journal = {Seismological Research Letters},
month = {jan},
title = {{Benchmarking Current and Emerging Approaches to Infrasound Signal Classification}},
